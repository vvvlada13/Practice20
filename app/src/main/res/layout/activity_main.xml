<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/textViewGyroscope"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Не определен"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.303" />

    <Button
        android:id="@+id/buttonThread"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="136dp"
        android:onClick="buttonThread_Click"
        android:text="@string/startThread"
        app:layout_constraintEnd_toEndOf="@+id/textViewGyroscope"
        app:layout_constraintStart_toStartOf="@+id/textViewGyroscope"
        app:layout_constraintTop_toBottomOf="@+id/textViewGyroscope" />

</androidx.constraintlayout.widget.ConstraintLayout>